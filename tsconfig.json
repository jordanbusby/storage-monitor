{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "files": true
  }
}